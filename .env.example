# Google OAuth (Create credentials at: https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/gmail/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:5173/auth/github/callback

# ============================================
# PostgreSQL Database (Neon - FREE)
# ============================================
# Get free database at: https://neon.tech
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# Encryption (generate a random 32-character string)
ENCRYPTION_KEY=change_this_to_random_32_chars

# AI - Cerebras (Get API key from: https://cloud.cerebras.ai/)
CEREBRAS_API_KEY=your_cerebras_api_key_here

# ============================================
# Firebase Cloud Messaging (Push Notifications)
# ============================================
# Get VAPID key from: Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
VITE_FIREBASE_VAPID_KEY=your_vapid_key_here

# Get service account JSON from: Firebase Console > Project Settings > Service Accounts > Generate new private key
# Paste the entire JSON as a single line (escape quotes if needed)
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Frontend (Vite requires VITE_ prefix)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GITHUB_CLIENT_ID=your_github_client_id_here

# Environment
NODE_ENV=development
