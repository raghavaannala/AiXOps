{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/auth/gmail/callback",
            "destination": "/index.html"
        },
        {
            "source": "/dashboard",
            "destination": "/index.html"
        },
        {
            "source": "/((?!api|assets|favicon|.*\\..*).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/email-followup",
            "schedule": "*/15 * * * *"
        },
        {
            "path": "/api/cron/github-reminder",
            "schedule": "*/30 * * * *"
        }
    ]
}